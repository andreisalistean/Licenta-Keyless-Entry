<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentStatus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StatusFragment"
    android:background="#00000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/gear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"

            android:textColor="@color/white"

            android:layout_marginTop="10dp"
            android:text="GEAR: "

            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/gear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="15dp"
            android:textColor="@color/white"

            android:layout_marginTop="10dp"
            android:text=""

            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/gear1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/engine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:textColor="@color/white"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="ENGINE: "

            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            />

        <TextView
            android:id="@+id/engine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="15dp"
            android:textColor="@color/white"

            android:layout_marginTop="10dp"
            android:text=""
            android:layout_marginBottom="10dp"

            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/engine1"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/voltage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="VOLTAGE: "
            android:textSize="14sp"
            android:textColor="@color/white"

            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/voltage2"
            />

        <TextView
            android:id="@+id/voltage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text=""
            android:textSize="14sp"
            android:textColor="@color/white"

            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"


            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/temp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="TEMP: "
            android:textColor="@color/white"

            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/temp2"

            />

        <TextView
            android:id="@+id/temp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text=""
            android:textColor="@color/white"

            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"

            app:layout_constraintTop_toBottomOf="@id/voltage1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>